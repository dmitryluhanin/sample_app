FROM ruby:2.3.3
ENV DB_DEPLOY $DB_DEPLOY
ENV DB_HOST $DB_HOST
ENV DB_LOGIN $DB_LOGIN
ENV DB_PASS $DB_PASS
ENV DB_PROD $DB_PROD
ENV DEPLOY_HOST $DEPLOY_HOST
ENV DEPLOY_PASS $DEPLOY_PASS
ENV DEPLOY_USER $DEPLOY_USER
ENV DOCKER_EMAIL $DOCKER_EMAIL
ENV DOCKER_PASS $DOCKER_PASS
ENV DOCKER_USER $DOCKER_USER

RUN apt-get update -qq && apt-get install -y build-essential libpq-dev nodejs
RUN mkdir /myapp
WORKDIR /myapp
ADD Gemfile /myapp/Gemfile
RUN bundle install
ADD . /myapp
EXPOSE 3000
CMD ["rails", "server"]
